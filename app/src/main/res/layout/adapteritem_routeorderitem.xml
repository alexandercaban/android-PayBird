<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvRouteOrderItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardview_elevation_high">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/btnRouteOrder_Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rlRouteOrderItem_Content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/rlRouteOrderItem_Content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/fab_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_downward_black_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/divider"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rlRouteOrderItem_Content"
            android:layout_alignTop="@id/rlRouteOrderItem_Content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toStartOf="@id/btnRouteOrder_Down"
            android:background="@color/indigoblue_divider" />

        <FrameLayout
            android:id="@+id/btnRouteOrder_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rlRouteOrderItem_Content"
            android:layout_alignTop="@id/rlRouteOrderItem_Content"
            android:layout_toStartOf="@id/btnRouteOrder_Down"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/fab_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_upward_black_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/divider"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rlRouteOrderItem_Content"
            android:layout_alignTop="@id/rlRouteOrderItem_Content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toStartOf="@id/btnRouteOrder_Up"
            android:background="@color/indigoblue_divider" />

        <RelativeLayout
            android:id="@+id/rlRouteOrderItem_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btnRouteOrder_Up"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/tvRouteOrderItem_Address"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="DirecciÃ³n" />

            <TextView
                android:id="@+id/tvRouteOrderItem_CustomerName"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRouteOrderItem_Address"
                android:lines="1"
                android:text="Cliente" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>